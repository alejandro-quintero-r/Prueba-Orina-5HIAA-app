<div class="col-md-8 mx-auto mt-0">
    <div class="card ">
        <div class="card-header text-center bg-secondary">            
            <h1 class="h4 text-white font-weight-bold">Agregar un nuevo usuario</h1>
        </div>
        <div class="card-body"> 

            <form action="/users/createUser" class= "justify-content-center" method="POST">  

                <h6 class="font-weight-bold mt-0 mb-1">Información personal</h6>                              
                <div class="form-group row d-flex justify-content-center"> 
                    <div class="col-md-6 mb-2">                        
                        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="identification_type">
                            <!-- Circulear externa 024 de 2019 Ministerio de protección social -->                            
                            <option selected>--- Elija un tipo de identificación ---</option>                            
                            <option value="Cedula">Cédula</option>
                            <option value="Cedula_extrangeria">Cédula de extrangeria</option>
                            <option value="Pasaporte">Pasaporte</option>
                            <option value="Tarjeta_identidad">Tarjeta de identidad</option>
                            <option value="Registro_civil">Registri civil</option>
                            <option value="Carnet_diplomatico">Carné diplomático</option>
                            <option value="Salvoconducto">Salvoconducto</option>
                            <option value="Perm_especial_permanencia">Perrmiso especial de permanencia</option>
                            <option value="Documento_extrangero">Documento extrangero</option>
                            <option value="Sin_identificacion">Sin identificación</option>
                        </select>
                    </div> 
                    <div class="col-md-6 mb-2">
                        <input type="number" class="form-control bg-light" name="identification" placeholder="Número de identificación"
                            value="{{identification}}">
                    </div>     
                    <div class="col-md-4 mb-0">
                        <input type="text" class="form-control bg-light" name="name" placeholder="Nombres"
                            value="{{name}}">
                    </div>
                    <div class="col-md-4 mb-0">
                        <input type="text" class="form-control bg-light" name="lastname" placeholder="Primer apellido"
                            value="{{lastname}}">
                    </div>
                    <div class="col-md-4 mb-0">
                        <input type="text" class="form-control bg-light" name="sec_lastname"
                            placeholder="Segundo apellido" value="{{sec_lastname}}">
                    </div>                                       
                </div>                                  
                <hr>

                <h6 class="font-weight-bold mt-0 mb-1">Información general</h6>                              
                <div class="form-group row"> 
                    <div class="col-md-6 mb-0">
                        <label for="f_nac" class="mb-0">Fecha de nacimiento:</label>
                        <input type="date" class="form-control bg-light mt-0" id="f_nac" name="date_of_bird" placeholder="Fecha de nacimiento"
                            value="{{date_of_bird}}">
                    </div>
                    <div class="col-md-6 mb-2">  
                        <label for="genero" class="mb-0">Genero:</label>                      
                        <select class="custom-select mr-sm-2" id="gender" name="gender">            
                            <option value="Masculino">Masculino</option> 
                            <option value="Femenino">Femenino</option>  
                            <option value="Otro">Otro</option>                         
                        </select>
                    </div>
                    <div class="col-md-6 mb-2">  
                        <label for="sangre" class="mb-0">Tipo de sangre:</label>                      
                        <select class="custom-select mr-sm-2" id="blood_type" name="blood_type">            
                            <option value="A">A</option> 
                            <option value="B">B</option>
                            <option value="AB">AB</option>
                            <option value="O">O</option>                           
                        </select>                        
                    </div>
                    <div class="col-md-6 mb-2"> 
                        <label for="rh" class="mb-0">Rh:</label>                      
                        <select class="custom-select mr-sm-2" id="rh" name="rh">            
                            <option value="Positivo">Positivo</option> 
                            <option value="Negativo">Negativo</option>                           
                        </select>
                    </div>
                    <div class="col-md-6 mb-0"> 
                        <label for="marital_status" class="mb-0">Estado civil:</label>                      
                        <select class="custom-select mr-sm-2" id="marital_status" name="marital_status">            
                            <option value="Soltero">Soltero/a</option> 
                            <option value="Casado">Casado/a</option>  
                            <option value="UnionLibre">Unión libre</option>
                            <option value="Divorciado">Divorsiado/a</option>
                            <option value="Separado">Separado/a</option> 
                            <option value="Viudo">Viudo/a</option>                        
                        </select>
                    </div>
                    <div class="col-md-6 mb-0">
                        <label for="eps" class="mb-0">EPS:</label> 
                        <input type="text" class="form-control bg-light" id="EPS" name="EPS" placeholder="EPS a la que está afiliado/a"
                        value="{{EPS}}">           
                    </div>
                </div>
                <hr>

                <h6 class="font-weight-bold mt-0 mb-1">Datos de localización</h6>                              
                <div class="form-group row"> 
                    <div class="col-md-6 mb-2"> 
                        <input type="number" class="form-control bg-light" name="home_phone"
                            placeholder="Teléfono de la casa" value="{{home_phone}}">
                    </div>
                    <div class="col-md-6 mb-2"> 
                        <input type="number" class="form-control bg-light" name="mobile_phone"
                            placeholder="Teléfono móvil" value="{{mobile_phone}}">
                    </div> 
                    <div class="col-md-6 mb-2"> 
                        <input type="number" class="form-control bg-light" name="work_phone"
                            placeholder="Teléfono del trabajo" value="{{work_phone}}">
                    </div>
                    <div class="col-md-6 mb-2"> 
                        <input type="text" class="form-control bg-light" name="address"
                            placeholder="Dirección" value="{{address}}">
                    </div>
                    <div class="col-md-6 mb-0"> 
                        <input type="text" class="form-control bg-light" name="city"
                            placeholder="Ciudad" value="{{city}}">
                    </div>
                    <div class="col-md-6 mb-0"> 
                        <input type="text" class="form-control bg-light" name="department"
                            placeholder="Departamento" value="{{work_phone}}">
                    </div>
                </div>
                <hr>

                <h6 class="font-weight-bold mt-0 mb-1">Información de sesión</h6>                              
                <div class="form-group row d-flex justify-content-center">                    
                    <div class="col-md-6 mb-2">                        
                        <select class="custom-select mr-sm-2" id="role" name="role">
                            <option selected>--- Elija un tipo de usuario ---</option>
                            <option value="Paciente">Paciente</option>
                            <option value="Empleado">Empleado</option>
                            <option value="Medico">Médico</option>
                            <option value="Admin">Administrador de la plataforma</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-2">
                        <input type="email" class="form-control bg-light" name="email" placeholder="Email"
                            value="{{email}}">
                    </div>
                    <div class="col-md-6 mb-0">
                        <input type="password" class="form-control bg-light" name="password" placeholder="Contraseña">
                    </div>
                    <div class="col-md-6 mb-0">
                        <input type="password" class="form-control bg-light" name="confirm_password" placeholder="Confirmar contraseña">           
                    </div>                   
                </div>
                <hr> 

                <h6 class="font-weight-bold mt-0 mb-1">Información de contacto</h6>                              
                <div class="form-group row">
                    <div class="col-md-4 mb-2">
                        <input type="text" class="form-control bg-light" name="contact_name" placeholder="Nombres del contacto"
                            value="{{contact_name}}">
                    </div>
                    <div class="col-md-4 mb-2">
                        <input type="text" class="form-control bg-light" name="contact_lastname" placeholder="Primer apellido del contacto"
                            value="{{contact_lastname}}">
                    </div>
                    <div class="col-md-4 mb-2">
                        <input type="text" class="form-control bg-light" name="contact_sec_lastname"
                            placeholder="Segundo apellido del contacto" value="{{contact_sec_lastname}}">
                    </div>
                    <div class="col-md-6 mb-0">
                        <input type="text" class="form-control bg-light" name="contact_relationship"
                            placeholder="Relación o parentesco" value="{{contact_relationship}}">
                    </div>
                    <div class="col-md-6 mb-0">
                        <input type="number" class="form-control bg-light" name="contact_phone"
                            placeholder="Teléfono del contacto" value="{{contact_relationship}}">
                    </div>
                </div>
                <hr>        

                <div class="col-md-4 mx-auto">                  
                    <button class="btn btn-primary btn-block">Agregar</button>
                </div>        
            </form>            
        </div>
    </div>    
</div>

<br>


